<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="429.0" prefWidth="442.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.test.datalist.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <MenuBar>
        <menus>
            <Menu mnemonicParsing="false" text="File">
                <items>
                    <MenuItem fx:id="menu_create" mnemonicParsing="false" text="Create"/>
                    <MenuItem fx:id="menu_search" mnemonicParsing="false" text="search"/>
                </items>
            </Menu>
        </menus>
    </MenuBar>
    <Pane fx:id="pane" prefHeight="364.0" prefWidth="402.0">
        <children>
            <!--Tela de cadastro de dados-->
            <Label layoutX="14.0" layoutY="82.0" prefHeight="18.0" prefWidth="32.0" text="Host:"/>
            <TextField fx:id="txt_host" layoutX="78.0" layoutY="79.0" prefHeight="25.0" prefWidth="148.0"/>
            <Label layoutX="242.0" layoutY="83.0" prefHeight="18.0" prefWidth="32.0" text="Port:"/>
            <TextField fx:id="txt_port" layoutX="274.0" layoutY="79.0" prefHeight="25.0" prefWidth="87.0"/>
            <Label layoutX="14.0" layoutY="133.0" prefHeight="18.0" prefWidth="32.0" text="User:"/>
            <TextField fx:id="txt_username" layoutX="78.0" layoutY="129.0" prefHeight="25.0" prefWidth="285.0"/>
            <Label layoutX="14.0" layoutY="184.0" prefHeight="18.0" prefWidth="58.0" text="Password:"/>
            <PasswordField fx:id="txt_password" layoutX="78.0" layoutY="180.0" prefHeight="25.0" prefWidth="285.0"/>
            <Label layoutX="14.0" layoutY="234.0" prefHeight="18.0" prefWidth="58.0" text="Database:"/>
            <TextField fx:id="txt_database" layoutX="78.0" layoutY="230.0" prefHeight="25.0" prefWidth="133.0"/>
            <Label layoutX="229.0" layoutY="234.0" prefHeight="18.0" prefWidth="58.0" text="Ambiente:"/>
            <ChoiceBox fx:id="select_ambiente" layoutX="296.0" layoutY="230.0" prefHeight="25.0" prefWidth="65.0"/>
            <Label fx:id="welcomeText" layoutX="30.0" layoutY="314.0" prefHeight="18.0" prefWidth="273.0">
                <font>
                    <Font name="System Bold" size="14.0"/>
                </font>
            </Label>
            <Button fx:id="btn_submit" layoutX="318.0" layoutY="310.0" onAction="#onSubmitButtonClick" text="Submit"/>
            <Label layoutX="91.0" layoutY="34.0" prefHeight="25.0" prefWidth="220.0" text="Salvar configs de Database">
                <font>
                    <Font name="System Bold" size="16.0"/>
                </font>
            </Label>
            <!--Tela de busca de dados-->
            <Label layoutX="14.0" layoutY="234.0" prefHeight="18.0" prefWidth="58.0" text="Database:"/>
            <TextField fx:id="txt_search_database" layoutX="78.0" layoutY="230.0" prefHeight="25.0" prefWidth="133.0"/>
            <Label layoutX="229.0" layoutY="234.0" prefHeight="18.0" prefWidth="58.0" text="Ambiente:"/>
            <ChoiceBox fx:id="select_search_ambiente" layoutX="296.0" layoutY="230.0" prefHeight="25.0"
                       prefWidth="65.0"/>
            <Button fx:id="btn_search" layoutX="318.0" layoutY="310.0" onAction="#onSubmitButtonClick" text="Submit"/>
        </children>
    </Pane>
</VBox>
